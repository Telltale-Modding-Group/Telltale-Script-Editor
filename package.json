{
  "name": "telltale-script-editor",
  "productName": "telltale-script-editor",
  "version": "2.2.2",
  "description": "An unofficial, open-source editor to allow for easy modification of scripts from Telltale games.",
  "main": ".webpack/main",
  "author": "Telltale Modding Group",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/public/coloredhatsketch.ico",
        "extraResource": [
          "./resources/ttarchext.exe",
          "./resources/luac.exe"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "telltale_script_editor",
            "iconUrl": "./src/public/coloredhatsketch.ico",
            "setupIcon": "./src/public/coloredhatsketch.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer/renderer.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.64",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.2",
    "css-loader": "^6.7.1",
    "electron": "19.0.6",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@mantine/core": "^4.2.10",
    "@mantine/form": "^4.2.10",
    "@mantine/hooks": "^4.2.10",
    "@mantine/modals": "^4.2.10",
    "@mantine/notifications": "^4.2.10",
    "@mantine/spotlight": "^4.2.10",
    "@monaco-editor/react": "^4.4.5",
    "@reduxjs/toolkit": "^1.8.2",
    "@szhsin/react-menu": "^3.1.1",
    "@types/adm-zip": "^0.5.0",
    "@types/archiver": "^5.3.1",
    "@types/luaparse": "^0.2.8",
    "adm-zip": "^0.5.9",
    "archiver": "^5.3.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.2",
    "luaparse": "^0.3.1",
    "monaco-editor": "^0.33.0",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-redux": "^8.0.2"
  }
}
